{% if _messages is defined %}
    {% for message in _messages %}
        {% include "_includes/message.html.twig" with { message: message } %}
    {% endfor %}
{% endif %}

{% if _dismissed_messages is defined %}
    {% for message in _dismissed_messages %}
        {% include "_includes/message.html.twig" with { message: message } %}
    {% endfor %}
{% endif %}