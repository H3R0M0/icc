{% extends "main.html.twig" %}

{% block title %}{{ 'admin.teachers.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin') }}">{{ 'admin.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}

    {% if teachers|length == 0 %}
        <div class="bs-callout bs-callout-info">
            <h4>{{ 'info.label'|trans }}</h4>

            <p>{{ 'admin.teachers.overview.empty'|trans }}</p>
        </div>
    {% else %}
        <div class="card">
            <table class="table table-striped table-bordered table-hover">
                <colgroup>
                    <col class="column-md">
                    <col>
                    <col>
                    <col class="column-md">
                    <col class="column-lg">
                    <col class="column-md">
                </colgroup>

                <thead>
                <tr>
                    <th>{{ 'label.acronym'|trans }}</th>
                    <th>{{ 'label.firstname'|trans }}</th>
                    <th>{{ 'label.lastname'|trans }}</th>
                    <th>{{ 'label.title'|trans }}</th>
                    <th>{{ 'label.tags'|trans }}</th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>{{ teacher.acronym }}</td>
                        <td>{{ teacher.firstname}}</td>
                        <td>{{ teacher.lastname }}</td>
                        <td>{{ teacher.title }}</td>
                        <td>
                            {% for tag in teacher.tags %}{{ tag.name }}{% if not loop.last %}, {% endif %}{% endfor %}
                        </td>
                        <td>
                            <a href="{{ path('edit_teacher', { id: teacher.id }) }}" class="btn btn-primary btn-sm">
                                <i class="fa fa-edit"></i>
                            </a>

                            <a href="{{ path('remove_teacher', { id: teacher.id }) }}" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

    <div class="buttons">
        <a href="{{ path('add_teacher') }}" class="btn btn-primary btn-sm">
            <i class="fa fa-plus"></i> {{ 'admin.teachers.add.label'|trans }}
        </a>

        <a href="{{ path('admin_teacher_tags') }}" class="btn btn-secondary btn-sm">
            <i class="fa fa-cogs"></i> {{ 'admin.teachers.tags.label'|trans }}
        </a>
    </div>
{% endblock %}