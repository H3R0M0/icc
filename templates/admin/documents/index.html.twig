{% extends "main.html.twig" %}

{% block title %}{{ 'admin.documents.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin') }}">{{ 'admin.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}

    {% if categories|length == 0 %}
        <div class="bs-callout bs-callout-info">
            <h4>{{ 'info.label'|trans }}</h4>

            <p>{{ 'admin.documents.overview.empty'|trans }}</p>
        </div>
    {% else %}
        {% for group in categories %}
            <div class="card">
                <div class="card-header">{{ group.category.name }} <span class="badge badge-pill badge-primary">{{ group.documents|length }}</span> </div>

                <table class="table table-striped table-bordered table-hover">
                    <colgroup>
                        <col>
                        <col class="column-320">
                        <col class="column-320">
                        <col class="column-lg">
                    </colgroup>

                    <thead>
                    <tr>
                        <th>{{ 'label.title'|trans }} </th>
                        <th>{{ 'label.visibility'|trans }}</th>
                        <th>{{ 'label.authors'|trans }}</th>
                        <th> </th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for document in group.documents %}
                        <tr>
                            <td>{{ document.title }}</td>
                            <td>
                                {% for visibility in document.visibilities %}{{ visibility.userType|enum }}{% if not loop.last %}, {% endif %}{% endfor %}
                            </td>
                            <td>
                                {% for user in document.authors %}{{ user|user }}{% if not loop.last %}, {% endif %}{% endfor %}
                            </td>
                            <td>
                                {% if is_granted('edit', document) %}
                                    <a href="{{ path('admin_edit_document', { id: document.id }) }}" class="btn btn-primary btn-sm">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="{{ path('document_versions', { id: document.id }) }}" class="btn btn-primary btn-sm">
                                        <i class="fa fa-history"></i>
                                    </a>
                                {% endif %}
                                {% if is_granted('remove', document) %}
                                    <a href="{{ path('admin_remove_document', { id: document.id }) }}" class="btn btn-danger btn-sm">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endfor %}
    {% endif %}

    <div class="buttons">
        {% if is_granted('new-document') %}
        <a href="{{ path('admin_add_document') }}" class="btn btn-primary btn-sm">
            <i class="fa fa-plus"></i> {{ 'admin.documents.add.label'|trans }}
        </a>
        {% endif %}

        {% if is_granted('ROLE_DOCUMENTS_ADMIN') %}
        <a href="{{ path('admin_document_categories') }}" class="btn btn-secondary btn-sm">
            <i class="fa fa-cogs"></i> {{ 'admin.documents.categories.label'|trans }}
        </a>
        {% endif %}
    </div>
{% endblock %}