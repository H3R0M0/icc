{% extends "main.html.twig" %}

{% block title %}{{ 'admin.documents.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin') }}">{{ 'admin.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}

    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-9">
                {% if categories|length == 0 %}
                    <div class="bs-callout bs-callout-info">
                        <h4>{{ 'info.label'|trans }}</h4>

                        <p>{{ 'admin.documents.overview.empty'|trans }}</p>
                    </div>
                {% else %}
                    {% for group in categories %}
                        <div class="card">
                            <div class="card-header">{{ group.category.name }} <span class="badge badge-pill badge-primary">{{ group.documents|length }}</span> </div>

                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover card-table">
                                    <colgroup>
                                        <col>
                                        <col class="column-320">
                                        <col class="column-320">
                                        <col class="column-lg">
                                    </colgroup>

                                    <thead>
                                    <tr>
                                        <th>{{ 'label.title'|trans }} </th>
                                        <th>{{ 'label.visibility'|trans }}</th>
                                        <th>{{ 'label.authors'|trans }}</th>
                                        <th> </th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    {% for document in group.documents %}
                                        <tr>
                                            <td class="align-middle">{{ document.title }}</td>
                                            <td class="align-middle">
                                                {% for visibility in document.visibilities %}{{ visibility.userType|enum }}{% if not loop.last %}, {% endif %}{% endfor %}
                                            </td>
                                            <td class="align-middle">
                                                {% for user in document.authors %}{{ user|user }}{% if not loop.last %}, {% endif %}{% endfor %}
                                            </td>
                                            <td class="align-middle">
                                                {% if is_granted('edit', document) %}
                                                    <a href="{{ path('admin_edit_document', { uuid: document.uuid }) }}" class="btn btn-primary btn-sm" title="{{ 'actions.edit'|trans }}">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                    <a href="{{ path('document_versions', { uuid: document.uuid }) }}" class="btn btn-primary btn-sm" title="{{ 'versions.label'|trans }}">
                                                        <i class="fa fa-history"></i>
                                                    </a>
                                                {% endif %}
                                                {% if is_granted('remove', document) %}
                                                    <a href="{{ path('admin_remove_document', { uuid: document.uuid }) }}" class="btn btn-danger btn-sm" title="{{ 'actions.remove'|trans }}">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>

            <div class="col-md-3">
                <div class="card">
                    <div class="list-group list-group-flush">
                        {% if is_granted('new-document') %}
                            <a href="{{ path('admin_add_document') }}" class="list-group-item list-group-item-action">
                                <i class="fa fa-plus"></i> {{ 'admin.documents.add.label'|trans }}
                            </a>
                        {% endif %}

                        {% if is_granted('ROLE_DOCUMENTS_ADMIN') %}
                            <a href="{{ path('admin_document_categories') }}" class="list-group-item list-group-item-action">
                                <i class="fa fa-cogs"></i> {{ 'admin.documents.categories.label'|trans }}
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}