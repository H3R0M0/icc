{% extends "main.html.twig" %}

{% block title %}{{ 'admin.timetable.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin') }}">{{ 'admin.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header">{{ 'admin.timetable.periods.label'|trans }}</div>

                    {% if periods|length == 0 %}
                        <div class="card-body">
                            <div class="bs-callout bs-callout-info">
                                <h5>{{ 'info.label'|trans }}</h5>

                                <p>{{ 'admin.timetable.periods.overview.empty'|trans }}</p>
                            </div>
                        </div>
                    {% else %}
                        <table class="table table-striped table-bordered table-hover">
                            <colgroup>
                                <col>
                                <col class="column-lg">
                                <col class="column-lg">
                                <col class="column-md">
                            </colgroup>

                            <thead>
                            <tr>
                                <th>{{ 'label.name'|trans }} </th>
                                <th>{{ 'label.start'|trans }}</th>
                                <th>{{ 'label.end'|trans }}</th>
                                <th> </th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for period in periods %}
                                <tr>
                                    <td class="align-middle">
                                        {{ period.name }} <span class="badge badge-secondary">{{ period.externalId }}</span>
                                    </td>
                                    <td class="align-middle">
                                        {{ period.start|format_date }}
                                    </td>
                                    <td class="align-middle">
                                        {{ period.end|format_date }}
                                    </td>
                                    <td class="align-middle">
                                        <a href="{{ path('admin_edit_timetable_period', { uuid: period.uuid }) }}" class="btn btn-primary btn-sm">
                                            <i class="fa fa-edit"></i>
                                        </a>

                                        <a href="{{ path('admin_remove_timetable_period', { uuid: period.uuid }) }}" class="btn btn-danger btn-sm">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>

                <div class="card">
                    <div class="card-header">{{ 'admin.timetable.weeks.label'|trans }}</div>

                    {% if weeks|length == 0 %}
                        <div class="card-body">
                            <div class="bs-callout bs-callout-info">
                                <h5>{{ 'info.label'|trans }}</h5>

                                <p>{{ 'admin.timetable.weeks.overview.empty'|trans }}</p>

                                <a href="{{ path('add_default_timetable_weeks') }}" class="btn btn-primary btn-sm">
                                    <i class="fa fa-plus"></i> {{ 'admin.timetable.weeks.add_default.label'|trans }}
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <table class="table table-striped table-bordered table-hover">
                            <colgroup>
                                <col>
                                <col class="column-lg">
                                <col class="column-md">
                            </colgroup>
                            <thead>
                            <tr>
                                <th>{{ 'label.name'|trans }} </th>
                                <th>{{ 'label.week_mod.label'|trans }}</th>
                                <th> </th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for week in weeks %}
                                <tr>
                                    <td class="align-middle">
                                        {{ week.displayName }} <span class="badge badge-secondary">{{ week.key }}</span>
                                    </td>
                                    <td class="align-middle">
                                        {{ week.weekMod }}
                                    </td>
                                    <td class="align-middle">
                                        <a href="{{ path('admin_edit_timetable_week', { uuid: week.uuid }) }}" class="btn btn-primary btn-sm">
                                            <i class="fa fa-edit"></i>
                                        </a>

                                        <a href="{{ path('admin_remove_timetable_week', { uuid: week.uuid }) }}" class="btn btn-danger btn-sm">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="list-group list-group-flush">
                        <a href="{{ path('admin_add_timetable_period') }}" class="list-group-item list-group-item-action">
                            <i class="fa fa-plus"></i> {{ 'admin.timetable.periods.add.label'|trans }}
                        </a>
                        <a href="{{ path('admin_add_timetable_week') }}" class="list-group-item list-group-item-action">
                            <i class="fa fa-plus"></i> {{ 'admin.timetable.weeks.add.label'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}