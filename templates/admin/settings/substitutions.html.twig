{% extends "admin/settings/_settings.html.twig" %}

{% block title %}{{ 'admin.settings.substitutions.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin_settings') }}">{{ 'admin.settings.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block settings_card_body %}
    <div class="card-header">{{ 'label.general'|trans }}</div>

    <div class="card-body">
        {{ form_row(form.ahead_days) }}
        {{ form_row(form.skip_weekends) }}
        {{ form_row(form.absence_visibility) }}
    </div>

    <div class="card-header border-top">{{ 'profile.notifications.label'|trans }}</div>

    <div class="card-body">
        {{ form_row(form.notifications_enabled) }}
        {{ form_row(form.notifications_sender) }}
        {{ form_row(form.notifications_replyaddress) }}
    </div>
{% endblock %}