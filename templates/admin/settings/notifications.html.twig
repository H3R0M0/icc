{% extends "admin/settings/_settings.html.twig" %}

{% block title %}{{ 'admin.settings.notifications.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin_settings') }}">{{ 'admin.settings.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block settings_card_body %}

    <div class="card-header">{{ 'label.general'|trans }}</div>

    <div class="card-body">
        <div class="alert alert-danger">
            <i class="fa fa-exclamation-triangle"></i> {{ 'webpush.caution.experimental'|trans }}
        </div>

        {{ form_row(form.push_enabled) }}
        {{ form_row(form.email_enabled) }}
    </div>

{% endblock %}