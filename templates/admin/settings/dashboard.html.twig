{% extends "admin/settings/_settings.html.twig" %}

{% block title %}{{ 'admin.settings.dashboard.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin_settings') }}">{{ 'admin.settings.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block settings_content %}
    <div class="card">
        <div class="card-header">{{ 'plans.substitutions.label'|trans }}</div>

        <div class="card-body">
            {{ form_row(form.removable_types) }}
            {{ form_row(form.additional_types) }}
            {{ form_row(form.free_lesson_types) }}
            {{ form_row(form.next_day_threshold) }}
            {{ form_row(form.skip_weekends) }}
            {{ form_row(form.past_days) }}
            {{ form_row(form.future_days) }}
        </div>
    </div>
{% endblock %}