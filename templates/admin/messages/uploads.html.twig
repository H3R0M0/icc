{% extends "main.html.twig" %}

{% block post_javascript %}
    <script src="{{ asset('build/zipper.js') }}"></script>
{% endblock %}

{% block title %}{{ 'messages.uploads.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin') }}">{{ 'admin.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin_messages') }}">{{ 'admin.messages.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ message.title }}</li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% macro printUsers(view, message, users, backup) %}
    {% if users|length == 0 %}
        <tr class="table-warning">
            <td colspan="4">
                <i class="fa fa-user"></i> {{ backup }}
            </td>
        </tr>
    {% endif %}

    {% for user in users %}
        {% set completed = view.userUploads(user, message.files, true)|length == message.files|length %}
        <tr class="{% if completed %}table-success{% else %}table-warning{% endif %}">
            <td colspan="4">
                <i class="fa fa-user"></i> {{ user|user }}
            </td>
        </tr>

        {% for file in view.userUploads(user, message.files) %}
            <tr data-zip="file" data-zip-filename="{{ user.username }}/{{ file.filename|e }}" data-zip-url="{{ path('download_message_upload', { id: message.id, path: user.username ~ '/' ~ file.path }) }}">
                <td>{{ file.messageFile.label }}</td>
                <td>{{ file.filename }}</td>
                <td>{{ file.size|filesize }}</td>
                <td>{{ file.updatedAt|format_datetime }}</td>
            </tr>
        {% endfor %}
    {% endfor %}
{% endmacro %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-9" id="explorer">
                {# Students #}
                {% for grade in grades %}
                    <div class="card">
                        <div class="card-header">
                            {{ grade.grade.name }}

                            <span class="badge badge-primary">{{ 'user_type.student'|trans({}, 'enums') }}</span>
                            <span class="badge badge-primary">{{ view.studentProgress(grade.students, message.files) }}%</span>
                        </div>

                        <table class="table table-striped table-bordered">
                            <colgroup>
                                <col class="column-lg">
                                <col>
                                <col class="column-lg">
                                <col class="column-lg">
                            </colgroup>
                            <thead>
                            <tr>
                                <th>{{ 'label.name'|trans }}</th>
                                <th>{{ 'label.file'|trans }}</th>
                                <th>{{ 'label.filesize'|trans }}</th>
                                <th>{{ 'label.date'|trans }}</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for student in grade.students %}
                                {% set users = view.studentUsers(student) %}
                                {{ _self.printUsers(view, message, users, student|student ) }}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endfor %}

                {# Parents #}
                {% for grade in grades %}
                    <div class="card">
                        <div class="card-header">
                            {{ grade.grade.name }}

                            <span class="badge badge-primary">{{ 'user_type.parent'|trans({}, 'enums') }}</span>
                            <span class="badge badge-primary">{{ view.parentProgress(grade.students, message.files) }}%</span>
                        </div>

                        <table class="table table-striped table-bordered">
                            <colgroup>
                                <col class="column-lg">
                                <col>
                                <col class="column-lg">
                                <col class="column-lg">
                            </colgroup>
                            <thead>
                            <tr>
                                <th>{{ 'label.name'|trans }}</th>
                                <th>{{ 'label.file'|trans }}</th>
                                <th>{{ 'label.filesize'|trans }}</th>
                                <th>{{ 'label.date'|trans }}</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for student in grade.students %}
                                {% set users = view.parentUsers(student) %}
                                {{ _self.printUsers(view, message, users, student|student ) }}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endfor %}

                {# Teachers #}
                {% if teachers|length > 0 %}
                    <div class="card">
                        <div class="card-header">
                            {{ 'label.teachers'|trans }}

                            <span class="badge badge-primary">{{ view.teacherProgress(teachers, message.files) }}%</span>
                        </div>

                        <table class="table table-striped table-bordered">
                            <colgroup>
                                <col class="column-lg">
                                <col>
                                <col class="column-lg">
                                <col class="column-lg">
                            </colgroup>
                            <thead>
                            <tr>
                                <th>{{ 'label.name'|trans }}</th>
                                <th>{{ 'label.file'|trans }}</th>
                                <th>{{ 'label.filesize'|trans }}</th>
                                <th>{{ 'label.date'|trans }}</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for teacher in teachers %}
                                {% set users = view.teacherUsers(teacher) %}
                                {{ _self.printUsers(view, message, users, teacher|teacher ) }}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}

                {# Users #}
                {% for group in userGroups %}
                    <div class="card">
                        <div class="card-header">
                            {{ group.userType|enum }}

                            <span class="badge badge-primary">{{ view.progress(group.users, message.files) }}%</span>
                        </div>

                        <table class="table table-striped table-bordered">
                            <colgroup>
                                <col class="column-lg">
                                <col>
                                <col class="column-lg">
                                <col class="column-lg">
                            </colgroup>
                            <thead>
                            <tr>
                                <th>{{ 'label.name'|trans }}</th>
                                <th>{{ 'label.file'|trans }}</th>
                                <th>{{ 'label.filesize'|trans }}</th>
                                <th>{{ 'label.date'|trans }}</th>
                            </tr>
                            </thead>

                            <tbody>
                                {% for user in group.users %}
                                    {{ _self.printUsers(view, message, [ user ], user|user ) }}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endfor %}
            </div>

            <div class="col-md-3">
                <div class="card">
                    <div class="list-group list-group-flush">
                        <a href="#" class="list-group-item list-group-item-action" data-action="zip" data-files="#explorer" data-progress="#zip-progress">
                            <i class="far fa-file-archive"></i> {{ 'messages.uploads.download.label'|trans }}
                        </a>
                    </div>
                </div>

                <div class="card" id="zip-progress" style="display: none;">
                    <div class="card-body">
                        <span class="w-100" data-zip-progress-file></span>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 0" data-zip-progress-bar></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}