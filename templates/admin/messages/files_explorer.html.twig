<table class="table table-striped table-bordered">
    <colgroup>
        <col>
        <col class="column-md">
        <col class="column-md">
    </colgroup>

    <thead>
    <tr>
        <th>{{ 'label.file'|trans }}</th>
        <th>{{ 'label.filesize'|trans }}</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for folder in files %}
        <tr>
            <td colspan="3">
                <i class="fa fa-user"></i> {{ folder.basename }}
            </td>
        </tr>
        {% for file in folder.files %}
            {% set filePath = folder.basename ~ "/" ~ file.basename %}
        <tr data-zip="file" data-zip-filename="{{ filePath }}" data-zip-url="{{ path('download_message_upload', { id: message.id, path: filePath }) }}">
            <td>{{ file.basename }}</td>
            <td>{{ file.size|filesize }}</td>
            <td></td>
        </tr>
        {% endfor %}
    {% endfor %}
    </tbody>
</table>