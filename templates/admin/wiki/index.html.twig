{% extends "main.html.twig" %}

{% block title %}{{ 'admin.wiki.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin') }}">{{ 'admin.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% macro wiki_article(article, paddingLeft) %}
    <tr>
        <td class="align-middle"><span style="padding-left: {{ paddingLeft }}px;"></span> {% if paddingLeft > 0 %}â”—{% endif %} {{ article.title }}</td>
        <td class="align-middle">
            {% if article.isOnline %}
                <span class="badge badge-success">{{ 'label.online'|trans }}</span>
            {% else %}
                <span class="badge badge-danger">{{ 'label.offline'|trans }}</span>
            {% endif %}
        </td>
        <td class="align-middle">
            {% for visibility in article.visibilities %}{{ visibility.userType|enum }}{% if not loop.last %}, {% endif %}{% endfor %}
        </td>
        <td class="align-middle">
            <a href="{{ path('edit_wiki_article', { uuid: article.uuid }) }}" class="btn btn-primary btn-sm" title="{{ 'actions.edit'|trans }}"><i class="fa fa-edit"></i></a>
            <a href="{{ path('wiki_article_versions', { uuid: article.uuid }) }}" class="btn btn-primary btn-sm" title="{{ 'versions.label'|trans }}">
                <i class="fa fa-history"></i>
            </a>
            <a href="{{ path('remove_wiki_article', { uuid: article.uuid }) }}" class="btn btn-danger btn-sm" title="{{ 'actions.remove'|trans }}"><i class="fa fa-trash"></i></a>
        </td>
    </tr>

    {% for child in article.children %}
        {{ _self.wiki_article(child, paddingLeft + 10) }}
    {% endfor %}
{% endmacro %}

{% block content %}

    {% if tree|length == 0 %}
        <div class="bs-callout bs-callout-info">
            <h4>{{ 'info.label'|trans }}</h4>

            <p>{{ 'admin.wiki.overview.empty'|trans }}</p>
        </div>
    {% else %}
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover table-bordered table-striped card-table">
                    <colgroup>
                        <col>
                        <col class="column-sm">
                        <col class="column-320">
                        <col class="column-lg">
                    </colgroup>
                    <thead>
                    <tr>
                        <th>{{ 'label.title'|trans }}</th>
                        <th>{{ 'label.status'|trans }}</th>
                        <th>{{ 'label.visibility'|trans }}</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for article in tree %}
                        {{ _self.wiki_article(article, 0) }}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}

    <div class="buttons">
        <a href="{{ path('add_wiki_article') }}" class="btn btn-primary btn-sm">
            <i class="fa fa-plus"></i> {{ 'admin.wiki.add.label'|trans }}
        </a>
    </div>
{% endblock %}