{% extends "main.html.twig" %}

{% block title %}{{ 'cron.results.show.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('system') }}">{{ 'system.label'|trans }}</a> </li>
        <li class="breadcrumb-item"><a href="{{ path('admin_cronjobs') }}">{{ 'cron.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ result.cronJob.command }}</li>
        <li class="breadcrumb-item">{{ result.runAt|format_datetime }}</li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ result.cronJob.command }} @ {{ result.runAt|format_datetime }}
        </div>

        <div class="card-body">
            <pre>
                {{ result.output }}
            </pre>
        </div>
    </div>
{% endblock %}