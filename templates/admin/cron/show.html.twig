{% extends "main.html.twig" %}

{% block title %}{{ 'cron.results.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('system') }}">{{ 'system.label'|trans }}</a> </li>
        <li class="breadcrumb-item"><a href="{{ path('admin_cronjobs') }}">{{ 'cron.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ job.command }}</li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ job.command }}
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover card-table">
                <colgroup>

                </colgroup>

                <thead>
                <tr>
                    <th>{{ 'label.date'|trans }}</th>
                    <th>{{ 'cron.results.result'|trans }}</th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                {% for result in results %}
                    <tr>
                        <td>{{ result.createdAt|format_datetime }}</td>
                        <td>{{ result.statusCode }}</td>
                        <td>
                            <a href="{{ path('show_cronresult', { id: result.id, job: job.id }) }}" class="btn btn-primary btn-sm" title="{{ 'cron.results.show.label'|trans }}">
                                <i class="fa fa-terminal"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}