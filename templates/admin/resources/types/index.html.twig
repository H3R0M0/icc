{% extends "main.html.twig" %}

{% block title %}{{ 'admin.resources.types.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin') }}">{{ 'admin.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin_resources') }}">{{ 'admin.resources.label'|trans }}</a> </li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover card-table">
                            <colgroup>
                                <col class="column-sm">
                                <col>
                                <col class="column-md">
                            </colgroup>

                            <thead>
                            <tr>
                                <th></th>
                                <th>{{ 'label.name'|trans }}</th>
                                <th></th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for type in types %}
                                <tr>
                                    <td>
                                        {% if type.icon is not empty %}
                                            <i class="{{ type.icon }}"></i>
                                        {% endif %}
                                    </td>
                                    <td>{{ type.name }}</td>
                                    <td>
                                        {% if is_granted('edit', type) %}
                                        <a href="{{ path('edit_resource_type', { uuid: type.uuid }) }}" class="btn btn-primary btn-sm" title="{{ 'admin.resources.types.edit.label'|trans }}">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        {% endif %}

                                        {% if is_granted('remove', type) %}
                                            <a href="{{ path('remove_resource_type', { uuid: type.uuid }) }}" class="btn btn-danger btn-sm" title="{{ 'admin.resources.types.remove.label'|trans }}">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        {% else %}
                                            {% set reason = '' %}

                                            {% if type.id == 1 %}
                                                {% set reason = 'admin.resources.types.remove.error.rooms'|trans %}
                                            {% elseif type.resources.count > 0 %}
                                                {% set reason = 'admin.resources.types.remove.error.in_use'|trans %}
                                            {% endif %}

                                            {% if reason is not empty %}
                                                <button class="btn btn-danger btn-sm" title="{{ reason }}" disabled="disabled">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            {% endif %}
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card">
                    <div class="list-group list-group-flush">
                        <a href="{{ path('add_resource_type') }}" class="list-group-item list-group-item-action">
                            <i class="fa fa-plus"></i> {{ 'admin.resources.types.add.label'|trans }}
                        </a>

                        <a href="{{ path('admin_resources') }}" class="list-group-item list-group-item-action">
                            <i class="fa fa-arrow-left"></i> {{ 'actions.back'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}