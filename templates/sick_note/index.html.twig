{% extends "main.html.twig" %}

{% block title %}{{ 'sick_notes.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    {% set currentFilter = {
        section: sectionFilter.currentSection ? sectionFilter.currentSection.uuid.toString : null,
        teacher: teacherFilter.currentTeacher ? teacherFilter.currentTeacher.uuid.toString : null,
        student: studentFilter.currentStudent ? studentFilter.currentStudent.uuid.toString : null,
        grade: gradeFilter.currentGrade ? gradeFilter.currentGrade.uuid.toString : null
    } %}

    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-9">
                {% if groups|length == 0 %}
                    <div class="bs-callout bs-callout-info">
                        <h4>{{ 'info.label'|trans }}</h4>

                        <p>{{ 'sick_notes.empty'|trans }}</p>
                    </div>
                {% else %}
                    {% if teacherFilter.currentTeacher is not null %}
                        <div class="bs-callout bs-callout-info">
                            <h4>{{ 'info.label'|trans }}</h4>
                            <p>{{ 'sick_notes.teacher_info'|trans }}</p>
                        </div>
                    {% endif %}

                    {% for group in groups %}
                        <div class="card">
                            <div class="card-header">
                                {% if teacherFilter.currentTeacher is not null %}
                                    {% set tuition = group.tuition %}

                                    {% if tuition.displayName is not empty %}
                                        {{ tuition.displayName }}
                                    {% else %}
                                        {{ tuition.name }}
                                    {% endif %} ({{ tuition.subject.name }})

                                    {% for grade in tuition.studyGroup.grades %}<span class="badge badge-primary">{{ grade.name }}</span> {% endfor %}
                                {% elseif studentFilter.currentStudent is not null %}
                                    {{ group.student|student }}
                                {% else %}
                                    {{ group.grade.name }}
                                {% endif %}
                            </div>

                            <div class="table-responsive">
                                <table class="table table-striped card-table border-top-0">
                                    <colgroup>
                                        <col class="column-lg">
                                        <col>
                                        <col>
                                        <col class="column-lg">
                                        <col class="column-lg">

                                        <col class="column-md">
                                        <col class="column-sm">
                                    </colgroup>
                                    
                                    <thead>
                                    <tr>
                                        <th>{{ 'label.reason'|trans({}, 'enums') }}</th>
                                        <th>{{ 'label.lastname'|trans }}</th>
                                        <th>{{ 'label.firstname'|trans }}</th>
                                        <th>{{ 'sick_notes.add.absent_from'|trans }}</th>
                                        <th>{{ 'sick_notes.add.absent_until'|trans }}</th>
                                        <th>{{ 'sick_notes.created_at'|trans }}</th>
                                        <th>{{ 'label.grade'|trans }}</th>
                                        <th></th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    {% for note in group.sickNotes %}
                                        <tr>
                                            <td>
                                                {{ note.reason|enum }}
                                                {% if note.until.date >= today %}
                                                    <span class="badge badge-primary">
                                                        {{ 'sick_notes.active'|trans }}
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td>{{ note.student.lastname }}</td>
                                            <td>{{ note.student.firstname }}</td>
                                            <td>{{ note.from.date|format_date }} ({{ 'label.exam_lessons'|trans({'%start%': note.from.lesson, '%count%': 0}) }})</td>
                                            <td>{{ note.until.date|format_date }} ({{ 'label.exam_lessons'|trans({'%start%': note.until.lesson, '%count%': 0}) }})</td>
                                            <td>{{ note.createdAt|format_datetime }}</td>

                                            <td>
                                                {% set grade = note.student.grade(section) %}
                                                {% if grade is not null %}
                                                    {{ grade.name }}
                                                {% else %}
                                                    {{ 'label.not_available'|trans }}
                                                {% endif %}
                                            </td>
                                            <td>
                                                <a href="{{ path('show_sick_note', { uuid: note.uuid }) }}" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-info-circle"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    {% endfor %}

                    {% include '@Common/includes/pagination.html.twig' with {
                        currentFilters: currentFilter,
                        currentPage: page,
                        paginationPath: 'sick_notes',
                        lastPage: pages,
                        showAlwaysFirstAndLast: true
                    } only %}
                {% endif %}
            </div>
            <div class="col-md-3 sticky-sidebar">
                <div class="card">
                    <div class="list-group list-group-flush">
                        {% if is_granted('new-sicknote') %}
                            <a href="{{ path('add_sick_note') }}" class="list-group-item list-group-item-action">
                                <i class="fa fa-plus"></i> {{ 'sick_notes.add.label'|trans }}
                            </a>
                        {% endif %}
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        {% include "_filter/section.html.twig" %}

                        {% include "_filter/teacher.html.twig" with { allowClear: true, path: 'sick_notes' } %}

                        {% include "_filter/student.html.twig" %}

                        {% include "_filter/grade.html.twig" %}
                    </div>

                    <div class="card-footer">
                        <a href="{{ path('sick_notes') }}" class="btn btn-primary btn-sm">
                            {{ 'filter.reset'|trans }}
                        </a>
                    </div>
                </div>

                <div class="w-100">
                    <a href="#" class="btn btn-primary btn-sm float-right" data-trigger="scroll">
                        <i class="fa fa-arrow-up"></i> {{ 'actions.top'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}