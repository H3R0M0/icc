{% extends "main.html.twig" %}

{% block title %}{{ message.title }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('messages') }}">{{ 'messages.overview.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
<div class="container-fluid px-0">
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ message.title }}</h5>

                    {{ message.content|markdown }}
                </div>
            </div>

            {% if message.attachments|length > 0 %}
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ 'label.attachments'|trans }}</h5>

                        <ul class="list-unstyled">
                            {% for attachment in message.attachments %}
                                <li><i class="fa fa-file"></i> <a href="{{ path('download_message_attachment', { message: message.id, id: attachment.id }) }}">{{ attachment.filename }}</a> <span class="text-muted">{{ attachment.size|filesize }}</span></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endif %}

            {% if message.downloadsEnabled %}
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ 'messages.downloads.label'|trans }}</h5>

                        {% if downloads is empty %}
                        <div class="bs-callout bs-callout-info">
                            <p>{{ 'messages.downloads.empty'|trans }}</p>
                        </div>
                        {% else %}
                            <ul class="list-unstyled">
                                {% for file in downloads %}
                                <li><i class="fa fa-file"></i> <a href="{{ path('download_user_file', { id: message.id, filename: file.basename }) }}">{{ file.basename }}</a> <span class="text-muted">{{ file.size|filesize }}</span></li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                </div>
            {% endif %}

            {% if message.uploadsEnabled %}
                <div class="card{% if missing|length > 0 %} border-warning{% endif %}">
                    <div class="card-body">
                        <h5 class="card-title">
                            {{ 'messages.uploads.label'|trans }}

                            {% if missing|length > 0 %}
                                <span class="badge badge-warning">
                                    {{ 'messages.uploads.status.missing'|trans({'%count%': missing|length})}}
                                </span>
                            </span>
                            {% else %}
                                <span class="badge badge-success">
                                    {{ 'messages.uploads.status.good'|trans()}}
                                </span>
                            {% endif %}

                        </h5>

                        {{ form_start(form) }}

                        {% for item in form.uploads %}
                            {{ form_row(item.file) }}

                            {%  set upload = item.vars.data %}

                            <div class="form-group row">
                                <div class="col-sm-2"></div>
                                <div class="col-sm-10">
                                    <div class="bs-callout {% if not upload.uploaded %}bs-callout-warning{% else %}bs-callout-success{% endif %}" role="alert">
                                    {% if upload.uploaded %}
                                        <i class="fa fa-check-circle"></i> <a href="{{ path('download_uploaded_user_file', { message: message.id, id: upload.messageFile.id }) }}">{{ upload.filename }}</a> <span class="text-muted">{{ upload.size|filesize }} <i class="fa fa-calendar"></i> {{ upload.updatedAt|format_datetime }}</span>
                                    {% else %}
                                        <li class="fa fa-times-circle"></li> {{ 'messages.uploads.missing'|trans }}
                                    {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        {{ form_rest(form.uploads) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="col-md-3">
            {% if is_granted('edit', message) or is_granted('remove', message) %}
            <div class="card">
                <div class="list-group list-group-flush">
                    {% if is_granted('edit', message) %}
                        <a href="{{ path('edit_message', { id: message.id, ref: 'view' }) }}" class="list-group-item list-group-item-action">
                            <i class="fa fa-edit"></i> {{ 'admin.messages.edit.label'|trans }}
                        </a>

                        {% if message.mustConfirm %}
                            <a href="{{ path('message_confirmations', { id: message.id }) }}" class="list-group-item list-group-item-action">
                                <i class="fas fa-tasks"></i> {{ 'message.confirmations.label'|trans }}
                            </a>
                        {% endif %}

                        {% if message.downloadsEnabled %}
                            <a href="{{ path('message_downloads_admin', { id: message.id }) }}" class="list-group-item list-group-item-action">
                                <i class="fa fa-download"></i> {{ 'messages.downloads.label'|trans }}
                            </a>
                        {% endif %}
                        {% if message.uploadsEnabled %}
                            <a href="{{ path('message_uploads_admin', { id: message.id }) }}" class="list-group-item list-group-item-action">
                                <i class="fa fa-upload"></i> {{ 'messages.uploads.label'|trans }}
                            </a>
                        {% endif %}
                    {% endif %}
                    {% if is_granted('remove', message) %}
                        <a href="{{ path('remove_message', { id: message.id, ref: 'view' })}}" class="list-group-item list-group-item-action list-group-item-danger">
                            <i class="fa fa-trash"></i> {{ 'admin.messages.remove.label'|trans }}
                        </a>
                    {% endif %}
                </div>
            </div>
            {% endif %}

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ 'label.details'|trans }}</h5>

                    <p>
                        <span class="text-muted">{{ 'label.lastchange'|trans }}</span> {{ message.updatedAt|format_datetime }}
                    </p>

                    <p>
                        <span class="text-muted">{{ 'label.visibility'|trans }}</span>
                        {% for visibility in message.visibilities %}{{ visibility.userType|enum }}{% if not loop.last %}, {% endif %}{% endfor %}
                    </p>

                    {% if message.studyGroups|length > 0 %}
                        <p>
                            <span class="text-muted">{{ 'label.study_groups'|trans({'%count%': message.studyGroups|length }) }}</span> {% include '_includes/study_groups.html.twig' with { studyGroups: message.studyGroups, id: message.id } only  %}
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<div id="confirm-upload" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'messages.uploads.confirm.title'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>{{ 'messages.uploads.confirm.message'|trans }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'actions.cancel'|trans }}</button>
                <button type="button" class="btn btn-primary confirm">{{ 'messages.uploads.confirm.button'|trans }}</button>
            </div>
        </div>
    </div>
</div>

{% endblock %}
