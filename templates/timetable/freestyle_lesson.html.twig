{% if lesson != null %}
    <strong>
        {% if subject is not null %}
            {%- if subject.replaceSubjectAbbreviation -%}
                {{ subject.name }}
            {%- else -%}
                {{ subject.abbreviation }}
            {%- endif -%}
        {% else %}
            {{ lesson.subject }}
        {% endif %}
    </strong>

    {% if teachersFilter.currentTeachers|length > 1 %}
        {{ lesson.teachers|teachers }}
    {% endif %}
{% endif %}