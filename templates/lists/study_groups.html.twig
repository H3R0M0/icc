{% extends "main.html.twig" %}

{% block title %}{{ 'lists.study_groups.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            {% if studyGroupFilter.currentStudyGroup == null %}
            <div class="col-md-12">
            {% else %}
            <div class="col-md-9">
            {% endif %}

                {% include "_messages.html.twig" %}

                {% if studyGroupFilter.currentStudyGroup != null %}
                    {% if studyGroupFilter.currentStudyGroup.type.value == "grade" %}
                        {% set grade = studyGroupFilter.currentStudyGroup.grades[0] %}

                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ grade.name }}</h5>

                                <ul class="list-unstyled m-0">
                                    <li>{{ 'lists.study_groups.grade_teacher'|trans }}: {% for teacher in gradeTeachers %}{{ teacher|teacher }}{% if not loop.last %}, {% endif %}{% endfor %}</li>
                                    <li>{{ 'lists.study_groups.grade_teacher_substitutional'|trans }}: {% for teacher in substitutionalGradeTeachers %}{{ teacher|teacher }}{% if not loop.last %}, {% endif %}{% endfor %}</li>
                                    <li>{{ 'lists.study_groups.num_students'|trans }}: {{ students|length }}</li>
                                </ul>
                            </div>
                        </div>
                    {% endif %}

                    {% if students|length == 0 %}
                        <div class="bs-callout bs-callout-info">
                            <h4>{{ 'info.label'|trans }}</h4>

                            <p>{{ 'lists.study_groups.empty'|trans }}</p>
                        </div>
                    {% elseif students|length > 0 %}
                        <div class="card">
                            <div class="card-header">
                                {{ studyGroupFilter.currentStudyGroup.name }}
                                <span class="badge badge-primary badge-pill">{{ studyGroupFilter.currentStudyGroup.memberships|length }}</span>

                                {% for grade in studyGroupFilter.currentStudyGroup.grades %}
                                    <span class="badge badge-secondary">{{ grade.name }}</span>
                                {% endfor %}

                            </div>

                            <div class="table-responsive">
                                <table class="table table-striped table-hover table-bordered card-table">
                                    <colgroup>
                                        <col class="column-lg">
                                        <col class="column-lg">
                                        <col class="column-md">
                                        <col>
                                    </colgroup>

                                    <thead>
                                    <tr>
                                        <th>{{ 'label.lastname'|trans }}</th>
                                        <th>{{ 'label.firstname'|trans }}</th>
                                        <th>{{ 'label.grade'|trans }}</th>
                                        <th>{{ 'label.email'|trans }}</th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    {% for student in students %}
                                        <tr>
                                            <td>{{ student.lastname }}</td>
                                            <td>{{ student.firstname }}</td>
                                            <td>{{ student.grade.name }}</td>
                                            <td>
                                                {% if student.email is not empty %}
                                                    <i class="fa fa-envelope"></i>
                                                    <a href="mailto: {{ student.email}}" target="_blank">
                                                        {{ student.email}}
                                                    </a>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">{{ 'lists.tuitions.label'|trans }}</div>

                            <table class="table table-striped table-hover table-bordered">
                                <colgroup>
                                    <col class="column-lg">
                                    <col class="column-lg">
                                    <col>
                                    <col class="column-md">
                                </colgroup>
                                <thead>
                                <tr>
                                    <th>{{ 'label.name'|trans }}</th>
                                    <th>{{ 'label.subject'|trans }}</th>
                                    <th>{{ 'label.teacher'|trans }}</th>
                                    <th></th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for tuition in studyGroupFilter.currentStudyGroup.tuitions %}
                                    <tr>
                                        <td>{{ tuition.name }}</td>
                                        <td>{{ tuition.subject.name }}</td>
                                        <td>
                                            {% if tuition.teacher is null %}
                                                <span class="badge badge-secondary">{{ 'label.nobody'|trans }}</span>
                                            {% else %}
                                                {{ tuition.teacher|teacher }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="{{ path('list_tuition', { uuid: tuition.uuid }) }}">{{ 'label.details'|trans }}</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                {% endif %}

            {% if studyGroupFilter.currentStudyGroup != null %}
            </div>
            <div class="col-md-3">
            {% endif %}
                {% if students|length > 0 %}
                    <div class="card">
                        <div class="list-group list-group-flush">
                            <a href="{{ path('export_studygroup', { uuid: studyGroupFilter.currentStudyGroup.uuid }) }}" class="list-group-item list-group-item-action">
                                <i class="fas fa-download"></i> {{ 'lists.study_groups.export.csv'|trans }}
                            </a>

                            <a href="#" class="list-group-item list-group-item-action" data-clipboard-text="{% for student in students %}{% if student.email is not empty %}{{ student.email }};{% endif %}{% endfor %}">
                                <i class="fa fa-copy"></i> {{ 'lists.tuitions.export.copy'|trans }}
                            </a>

                            <a href="mailto:{% for student in students %}{% if student.email is not empty %}{{ student.email }};{% endif %}{% endfor %}" class="list-group-item list-group-item-action">
                                <i class="fa fa-envelope"></i> {{ 'lists.study_groups.export.mail'|trans }}
                            </a>
                        </div>
                    </div>
                {% endif %}

                <div class="card d-print-none">
                    <div class="card-body pb-1">
                        {% include "_filter/study_group.html.twig" %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}