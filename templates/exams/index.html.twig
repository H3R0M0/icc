{% extends "main.html.twig" %}

{% block title %}{{ 'plans.exams.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-9">

                {% include "_messages.html.twig" %}
                {% set currentFilter = {
                    all: showAll,
                    student: studentFilter.currentStudent ? studentFilter.currentStudent.uuid.toString : null,
                    teacher: teacherFilter.currentTeacher ? teacherFilter.currentTeacher.uuid.toString : null,
                    grade : gradeFilter.currentGrade ? gradeFilter.currentGrade.uuid.toString : null,
                    study_group: studyGroupFilter.currentStudyGroup ? studyGroupFilter.currentStudyGroup.uuid.toString() : null
                } %}
                <div class="card">
                    <div class="card-header">
                        <ul class="nav nav-pills card-header-pills" data-trigger="resize-hide">

                            <li class="nav-item d-flex align-items-center" data-resize="show">
                                <a class="nav-link {% if previousGroup is null %}disabled{% endif %}" href="{% if previousGroup is null %}#{% else %}{{ path('exams', currentFilter|merge({ week: previousGroup.weekOfYear.weekNumber, year: previousGroup.weekOfYear.year })) }}{% endif %}">
                                    <i class="fa fa-chevron-left"></i>
                                </a>
                            </li>

                            {% if examWeekGroups is empty %}
                                <li class="nav-item d-flex align-items-center">
                                    <a href="#" class="nav-link disabled">
                                        <i class="fa fa-info-circle"></i> {{ 'plans.exams.empty'|trans }}
                                    </a>
                                </li>
                            {% endif %}

                            {% for group in examWeekGroups %}
                                <li class="nav-item d-flex align-items-center">
                                    <a class="nav-link {% if group == currentGroup %} active{% endif %}" {% if group == currentGroup %}data-resize="prevent" {% endif %} href="{{ path('exams', currentFilter|merge({ week: group.weekOfYear.weekNumber, year: group.weekOfYear.year })) }}">
                                        <i class="fa fa-calendar"></i> {{ 'admin.exams.week'|trans({'%week%': group.weekOfYear.weekNumber }) }} <span class="badge badge-primary badge-pill">{{ group.exams|length }}</span>
                                        <div class="d-block">
                                            {{ group.weekOfYear.firstDay|date('date.format_short'|trans) }} - {{ group.weekOfYear.lastDay|date('date.format_short'|trans) }}
                                        </div>
                                    </a>
                                </li>
                            {% endfor %}

                            <li class="nav-item d-flex align-items-center" data-resize="show">
                                <a class="nav-link {% if nextGroup is null %}disabled{% endif %}" href="{% if nextGroup is null %}#{% else %}{{ path('exams', currentFilter|merge({ week: nextGroup.weekOfYear.weekNumber, year: nextGroup.weekOfYear.year })) }}{% endif %}">
                                    <i class="fa fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">
                            {% if teacherFilter.currentTeacher is not null %}
                                {{ 'plans.exams.title'|trans({'%for%' : teacherFilter.currentTeacher|teacher}) }}
                            {% elseif studentFilter.currentStudent is not null %}
                                {{ 'plans.exams.title'|trans({'%for%' : studentFilter.currentStudent|student}) }} ({{ studentFilter.currentStudent.grade.name }})
                            {% elseif gradeFilter.currentGrade is not null %}
                                {{ 'plans.exams.title_grades'|trans({'%for%' : gradeFilter.currentGrade.name}) }}
                            {% else %}
                                {{ 'plans.exams.label'|trans }}
                            {% endif %}
                        </h5>

                        {% if not isVisible %}
                            <div class="bs-callout bs-callout-info">
                                <h4>{{ 'info.label'|trans }}</h4>

                                <p>{{ 'plans.exams.not_visible'|trans }}</p>
                            </div>
                        {% elseif isVisibleAdmin %}
                            <div class="bs-callout bs-callout-info">
                                <h4>{{ 'info.label'|trans }}</h4>

                                <p>{{ 'plans.exams.visible_admin'|trans({'%type%': app.user.userType|enum }) }}</p>
                            </div>
                        {% elseif examGroups|length == 0 %}
                            <div class="bs-callout bs-callout-info">
                                <h4>{{ 'info.label'|trans }}</h4>

                                <p>{{ 'plans.exams.empty'|trans }}</p>
                            </div>
                        {% endif %}

                        {% for exam in exams %}
                            {% include "_includes/exam.html.twig" with { exam: exam, showDate: true } %}
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="list-group list-group-flush">
                        <a href="{{ path('exams_export') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-download"></i> {{ 'plans.exams.export.label'|trans }}
                        </a>

                        {% if is_granted('manage-exams') %}
                            <a href="{{ path('admin_exams') }}" class="list-group-item list-group-item-action">
                                <i class="fas fa-cogs"></i> {{ 'admin.exams.label'|trans }}
                            </a>
                        {% endif %}
                    </div>
                </div>

                {% if contains_active_filters([teacherFilter, studentFilter, gradeFilter, studyGroupFilter]) %}
                <div class="card">
                    <div class="card-body">
                        {% if teacherFilter.teachers|length > 0 %}
                            {% include "_filter/teacher.html.twig" with { params: { all: showAll } } %}
                        {% endif %}

                        {% if studentFilter.studentGradeGroups|length > 0 %}
                            {% include "_filter/student.html.twig" with { params: { all: showAll } } %}
                        {% endif %}

                        {% if gradeFilter.grades|length > 0 %}
                            {% include "_filter/grade.html.twig" with { params: { all: showAll } } %}
                        {% endif %}

                        {% if studyGroupFilter.studyGroupGroups|length > 0 %}
                            {% include "_filter/study_group.html.twig" with { params: { all: showAll } } %}
                        {% endif %}

                        <form role="form" method="get" class="form hidden-print">
                            {% set params = { } %}
                            {% if teacherFilter.currentTeacher is not null %}
                                {% set params = params|merge({ teacher: teacherFilter.currentTeacher.uuid.toString() }) %}
                            {% endif %}
                            {% if studentFilter.currentStudent is not null %}
                                {% set params = params|merge({ student: studentFilter.currentStudent.uuid.toString() }) %}
                            {% endif %}
                            {% if gradeFilter.currentGrade is not null %}
                                {% set params = params|merge({ grade: gradeFilter.currentGrade.uuid.toString() }) %}
                            {% endif %}

                            {% include "_filter/_params.html.twig" %}

                            <label class="control-label">{{ 'label.options'|trans }}:</label>
                            <div class="form-group mb-0">
                                <div class="custom-control custom-checkbox">

                                    <input class="custom-control-input" data-trigger="submit" type="checkbox" value="true" id="all" name="all" {% if showAll %} checked="checked"{% endif %}>
                                    <label for="all" class="custom-control-label">
                                        {{ 'plans.exams.show_all'|trans }}
                                    </label>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="card-footer">
                        <a href="{{ path('exams') }}" class="btn btn-primary btn-sm">{{ 'filter.reset'|trans }}</a>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}