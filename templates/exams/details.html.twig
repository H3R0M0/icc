{% extends "main.html.twig" %}

{% block title %}{{ 'plans.exam.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('exams') }}">{{ 'plans.exams.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    {% include "_includes/exam.html.twig" with { exam: exam, hideDetails: true, showDate: true, header: 'plans.exam.label' } %}

    <div class="card">
        <div class="card-header">{{ 'plans.exam.students'|trans }} <span class="badge badge-primary badge-pill">{{ exam.students|length }}</span></div>

        {% for group in groups %}
        <div class="card-header">{{ group.studyGroup.name }} <span class="badge badge-primary badge-pill">{{ group.students|length }}</span> </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover card-table {% if not loop.last or studentsWithoutStudyGroup|length > 0 %}border-bottom{% endif %}">
                <colgroup>
                    <col class="column-lg">
                    <col>
                </colgroup>
                <thead>
                <tr>
                    <th>{{ 'label.lastname'|trans }}</th>
                    <th>{{ 'label.firstname'|trans }}</th>
                </tr>
                </thead>

                <tbody>
                    {% for student in group.students %}
                        <tr>
                            <td>{{ student.lastname }}</td>
                            <td>{{ student.firstname }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% endfor %}

        {% if studentsWithoutStudyGroup|length > 0 %}
            <div class="card-header bg-warning">{{ 'plans.exams.not_available'|trans }} <span class="badge badge-primary badge-pill">{{ studentsWithoutStudyGroup|length }}</span></div>

            <div class="table-responsive">
                <table class="table table-striped table-hover card-table">
                    <colgroup>
                        <col class="column-lg">
                        <col>
                    </colgroup>
                    <thead>
                    <tr>
                        <th>{{ 'label.lastname'|trans }}</th>
                        <th>{{ 'label.firstname'|trans }}</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for student in studentsWithoutStudyGroup %}
                        <tr>
                            <td>{{ student.lastname }}</td>
                            <td>{{ student.firstname }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>

    <div class="buttons">
        <a href="javascript: history.back();" class="btn btn-primary btn-sm">
            <i class="fa fa-arrow-left"></i> {{ 'actions.back'|trans }}
        </a>
    </div>
{% endblock %}