{% extends "main.html.twig" %}

{% block title %}{{ 'plans.exam.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('exams') }}">{{ 'plans.exams.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <h2 class="mb-3">{{ 'plans.exam.label'|trans }}</h2>

    {% include "exams/_exam.html.twig" with { exam: exam, details: 0 } %}

    <div class="card">
        <div class="card-header">{{ 'plans.exam.students'|trans }} <span class="badge badge-primary badge-pill">{{ exam.students|length }}</span></div>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>{{ 'label.lastname'|trans }}</th>
                <th>{{ 'label.firstname'|trans }}</th>
                <th>{{ 'label.study_group'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for student in students %}
                <tr>
                    <td>{{ student.lastname }}</td>
                    <td>{{ student.firstname }}</td>
                    <td>
                        {% set studyGroup = studyGroups[student.id]|default(null) %}

                        {% if studyGroup is null %}
                            <span class="badge badge-warning">N/A</span>
                        {% else %}
                            {{ studyGroup.name }} ({% for grade in studyGroup.grades %}{{ grade.name }}{% if not loop.last %}, {% endif %}{% endfor %})
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="buttons">
        <a href="javascript: history.back();" class="btn btn-primary btn-sm">
            <i class="fa fa-arrow-left"></i> {{ 'actions.back'|trans }}
        </a>
    </div>
{% endblock %}