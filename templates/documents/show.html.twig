{% extends "main.html.twig" %}

{% block title %}{{ document.title }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('documents') }}">{{ 'documents.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ document.category.name }}</li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-9 pl-0">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ document.title }}</h5>

                    {{ document.content|markdown }}
                </div>
            </div>

            {% if document.attachments|length > 0 %}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ 'label.attachments'|trans }}</h5>

                    <ul class="list-unstyled">
                        {% for attachment in document.attachments %}
                            <li><i class="fa fa-file"></i> <a href="{{ path('download_document_attachment', { document: document.id, alias: document.alias, id: attachment.id }) }}">{{ attachment.filename }}</a> <span class="text-muted">{{ attachment.size|filesize }}</span></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            {% endif %}
        </div>

        <div class="col-md-3 pr-0">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ 'label.details'|trans }}</h5>

                    <p>
                        <span class="text-muted">{{ 'label.lastchange'|trans }}</span> {{ document.updatedAt|format_datetime }}
                    </p>

                    <p>
                        <span class="text-muted">{{ 'label.visibility'|trans }}</span>
                        {% for visibility in document.visibilities %}{{ visibility.userType|usertype }}{% if not loop.last %}, {% endif %}{% endfor %}
                    </p>

                    {% if document.studyGroups|length > 0 %}
                        <p>
                            <span class="text-muted">{{ 'label.study_groups'|trans }}</span> {% include '_includes/study_groups.html.twig' with { studyGroups: document.studyGroups, id: document.id } only  %}
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="buttons">
        <a href="javascript:history.back();" class="btn btn-primary btn-sm">
            <i class="fa fa-arrow-left"></i> {{ 'actions.back'|trans }}
        </a>

        {% if is_granted('edit', document) %}
            <a href="{{ path('admin_edit_document', { id: document.id, ref: 'view' }) }}" class="btn btn-primary btn-sm">
                <i class="fa fa-edit"></i> {{ 'admin.documents.edit.label'|trans }}
            </a>
        {% endif %}
        {% if is_granted('remove', document) %}
            <a href="{{ path('admin_remove_document', { id: document.id, ref: 'view' }) }}" class="btn btn-danger btn-sm">
                <i class="fa fa-trash"></i> {{ 'admin.documents.remove.label'|trans }}
            </a>
        {% endif %}
    </div>
{% endblock %}